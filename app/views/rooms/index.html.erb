<p style="color: green"><%= notice %></p>

<h1>Rooms</h1>

<%= turbo_frame_tag "room-index" do %>
  <div id="rooms">
    <% @rooms.each do |room| %>
      <%= render room %>
      <p>
        <%= link_to "Show this room", room %>
      </p>
    <% end %>
  </div>
<% end %>

<%= link_to "New room", new_room_path, data: { "turbo-frame": "modal" } %>
